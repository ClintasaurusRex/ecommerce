<div class="card">
  <div class="header">
    <h1>Products</h1>
    <%= link_to 'New Product', new_product_path, class: "button" %>
  </div>

  <div class="grid">
    <% @products.each do |product| %>
      <div class="card">
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p class="price"><%= number_to_currency(product.price) %></p>
        <div class="actions">
          <%= link_to 'View', product, class: "button" %>
          <%= link_to 'Edit', edit_product_path(product), class: "button" %>
          <%= button_to 'Delete', product, method: :delete, class: "button button-danger", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
